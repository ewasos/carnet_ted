{% extends 'notebook/nav_layout.html.twig' %}
{% block title %}{{ parent() }} - Ajouter {% endblock %}

{% block body %}
    <h1>Ajouter une personne</h1>

    {% for flashMessage in app.session.flashbag.get('message') %}
        <div class="alert ">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form_add_person) }}

    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.name) }}</div>
        {{ form_label(form_add_person.name) }}
        {{ form_widget(form_add_person.name, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.firstname) }}</div>
        {{ form_label(form_add_person.firstname) }}
        {{ form_widget(form_add_person.firstname, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.phone) }}</div>
        {{ form_label(form_add_person.phone) }}
        {{ form_widget(form_add_person.phone, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.email) }}</div>
        {{ form_label(form_add_person.email) }}
        {{ form_widget(form_add_person.email, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.profession) }}</div>
        {{ form_label(form_add_person.profession) }}
        {{ form_widget(form_add_person.profession, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>

    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.status) }}</div>
        {{ form_label(form_add_person.status) }}
        {{ form_widget(form_add_person.status, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>

    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.comments) }}</div>
        {{ form_label(form_add_person.comments) }}
        {{ form_widget(form_add_person.comments, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>

    <div class="form-group">
        <div class="msg_error">{{ form_errors(form_add_person.notebook) }}</div>
        {{ form_label(form_add_person.notebook) }}
        {{ form_widget(form_add_person.notebook, { 'attr' : { 'class' : 'form-control'}}) }}
    </div>
    {{ form_rest(form_add_person) }}
    <button type="submit" class="btn btn-info">Ajouter dans le carnet</button>

    {{ form_end(form_add_person) }}

{% endblock %}
